        "quickTranslate.translateVersion": {
          "type": "string",
          "default": "v1",
          "enum": [
            "v1",
            "v2"
          ],
          "enumDescriptions": [
            "Google Translate JSON API (translate_a/single).",
            "Google Translate mobile page (m?tl=...); parses HTML result-container."
          ],
          "scope": "resource",
          "description": "Translate backend: v1 (JSON API) or v2 (mobile page)."
        },
        "quickTranslate.viewMode": {
          "type": "string",
          "default": "panel",
          "scope": "window",
          "enum": [
            "hover",
            "panel",
            "inline"
          ],
          "enumDescriptions": [
            "Show translation in a hover tooltip above the selection.",
            "Show translation in a dedicated side panel.",
            "Show translation as inline decorations after each selected line."
          ],
          "description": "How to display the translation result. Invalid values fall back to hover."
        },
        "quickTranslate.inlineSave": {
          "type": "boolean",
          "default": false,
          "scope": "window",
          "description": "When using inline view mode, automatically save the document after inserting or removing the translation block. Disabled by default to avoid interfering with unsaved-change workflows."
        },
        "quickTranslate.normalizeText": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Enable text normalization before translating. When disabled, the selected text is sent to the API as-is."
        },
        "quickTranslate.normalizeKebabCase": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Convert kebab-case identifiers (e.g. `my-variable`) into words before translating."
        },
        "quickTranslate.normalizeSnakeCase": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Convert snake_case identifiers (e.g. `my_variable`) into words before translating."
        },
        "quickTranslate.normalizeDotCase": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Convert dot.case identifiers (e.g. `my.variable`) into words before translating."
        },
        "quickTranslate.normalizeMixedCase": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Split identifiers that mix multiple casing styles (e.g. `myVar_Name`) into words before translating."
        },
        "quickTranslate.normalizeCamelCase": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Convert camelCase identifiers (e.g. `myVariable`) into words before translating."
        },
        "quickTranslate.normalizePascalCase": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Convert PascalCase identifiers (e.g. `MyVariable`) into words before translating."
        },
        "quickTranslate.normalizeConsecutiveUppercase": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Split runs of consecutive uppercase letters (e.g. `XMLParser`) into words before translating."
        },
        "quickTranslate.normalizeAcronyms": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Treat known acronyms as single words during normalization (e.g. keep `HTTP` intact instead of splitting each letter)."
        },
        "quickTranslate.normalizeNumberBoundaries": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Insert a space between letters and digits at word boundaries (e.g. `version2` â†’ `version 2`) before translating."
        },
        "quickTranslate.trimExtraSpaces": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Collapse multiple consecutive spaces into one and trim leading/trailing whitespace before translating."
        },
        "quickTranslate.maxLineCount": {
          "type": "integer",
          "default": 50,
          "minimum": 1,
          "scope": "resource",
          "description": "Maximum number of lines to translate in multi-line mode. Lines beyond this limit are silently dropped and an information message is shown. Reduces accidental large API request batches."
        },
        "quickTranslate.largeSelectionThreshold": {
          "type": "integer",
          "default": 1000,
          "minimum": 1,
          "scope": "resource",
          "description": "Character count threshold above which a confirmation prompt is shown before translating. Very large inputs can produce poor results or hit API rate limits. Set to a very high value to disable the warning."
        },
        "quickTranslate.targetLanguages": {
          "type": "string",
          "default": "",
          "scope": "resource",
          "description": "Comma-separated list of target language codes for multi-target translation (panel view only), e.g. \"vi,ja,de\". When set, all results are shown in the panel renderer, one section per language. Overrides the single targetLanguage for panel-mode translations."
        },
        "quickTranslate.historySize": {
          "type": "integer",
          "default": 20,
          "minimum": 1,
          "maximum": 500,
          "scope": "application",
          "description": "Maximum number of translation results to keep in the session history (accessible via Quick Translate: Show History). History is not persisted across sessions."
        }
      }
    },
    "commands": [
      {
        "command": "quickTranslate.translateSelection",
        "title": "Quick Translate: Translate Selection",
        "category": "Quick Translate",
        "icon": "$(globe)"
      },
      {
        "command": "quickTranslate.translateWithoutNormalization",
        "title": "Quick Translate: Translate Without Normalization",
        "category": "Quick Translate"
      },
      {
        "command": "quickTranslate.clearLastTranslation",
        "title": "Quick Translate: Clear Last Translation",
        "category": "Quick Translate"
      },
      {
        "command": "quickTranslate.openSettings",
        "title": "Quick Translate: Open Extension Settings",
        "category": "Quick Translate"
      },
      {
        "command": "quickTranslate.copyLastTranslation",
        "title": "Quick Translate: Copy Last Translation",
        "category": "Quick Translate",
        "icon": "$(copy)"
      },
      {
        "command": "quickTranslate.normalizationPreview",
        "title": "Quick Translate: Normalization Preview",
        "category": "Quick Translate"
      },
      {
        "command": "quickTranslate.toggleNormalization",
        "title": "Toggle Normalization",
        "category": "Quick Translate"
      },
      {
        "command": "quickTranslate.switchViewMode",
        "title": "Switch View Mode",
        "category": "Quick Translate"
      },
      {
        "command": "quickTranslate.rerunLastTranslation",
        "title": "Quick Translate: Re-run Last Translation",
        "category": "Quick Translate",
        "icon": "$(refresh)"
      },
      {
        "command": "quickTranslate.acceptTranslation",
        "title": "Quick Translate: Accept Translation (Replace Selection)",
        "category": "Quick Translate"
      },
      {
        "command": "quickTranslate.showHistory",
        "title": "Quick Translate: Show History",
        "category": "Quick Translate",
        "icon": "$(history)"
      }
    ],
    "submenus": [
      {
        "id": "quickTranslate.menu",
        "label": "Quick Translate"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "quickTranslate.menu",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ],
      "quickTranslate.menu": [
        {
          "command": "quickTranslate.translateSelection",
          "when": "editorTextFocus && editorHasSelection",
          "title": "Translate Selection"
        },
        {
          "command": "quickTranslate.rerunLastTranslation",
          "when": "editorTextFocus",
          "title": "Re-run Last Translation"
        },
        {
          "command": "quickTranslate.copyLastTranslation",
          "when": "editorTextFocus",
          "title": "Copy Last Translation"
        },
        {
          "command": "quickTranslate.acceptTranslation",
          "when": "editorTextFocus",
          "title": "Accept Translation"
        },
        {
          "command": "quickTranslate.toggleNormalization",
          "when": "editorTextFocus && editorHasSelection",
          "title": "Toggle Normalization"
        },
        {
          "command": "quickTranslate.switchViewMode",
          "when": "editorTextFocus",
          "title": "Switch View Mode"
        },
        {
          "command": "quickTranslate.openSettings",
          "when": "editorTextFocus",
          "title": "Open Extension Settings"
        }
      ],
      "editor/title": [
        {
          "command": "quickTranslate.translateSelection",
          "when": "editorTextFocus && editorHasSelection",
          "group": "navigation@1"
        },
        {
          "command": "quickTranslate.rerunLastTranslation",
          "when": "editorTextFocus",
          "group": "navigation@2"
        },
        {
          "command": "quickTranslate.copyLastTranslation",
          "when": "editorTextFocus",
          "group": "navigation@3"
        }
      ],
      "commandPalette": [
        {
          "command": "quickTranslate.translateSelection"
        },
        {
          "command": "quickTranslate.translateWithoutNormalization"
        },
        {
          "command": "quickTranslate.clearLastTranslation"
        },
        {
          "command": "quickTranslate.openSettings"
        },
        {
          "command": "quickTranslate.copyLastTranslation"
        },
        {
          "command": "quickTranslate.normalizationPreview"
        },
        {
          "command": "quickTranslate.rerunLastTranslation"
        },
        {
          "command": "quickTranslate.acceptTranslation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "quickTranslate.translateSelection",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorHasSelection && editorTextFocus"
      }
    ]
  },
  "scripts": {
    "release": "standard-version --no-verify",
    "release:minor": "standard-version --release-as minor --no-verify",
    "release:major": "standard-version --release-as major --no-verify",
    "release:patch": "standard-version --release-as patch --no-verify",
    "release:dry": "standard-version --dry-run",
    "vscode:prepublish": "pnpm run package",
    "publish:vsce": "pnpm dlx vsce publish --no-dependencies",
    "publish:ovsx": "pnpm dlx ovsx publish --no-dependencies",
    "vscode:publish": "npm-run-all publish:*",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:translate": "node --test --import tsx src/test/translate.test.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "~20.19.33",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "standard-version": "^9.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a"
}
